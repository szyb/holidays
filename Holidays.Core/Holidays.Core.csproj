<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net40</TargetFrameworks>
    <AssemblyName>Szyb.PolishHolidays</AssemblyName>
    <RootNamespace>Szyb.Holidays.Core</RootNamespace>
    <Authors>Szymon Bełus</Authors>
    <Description>This is a simple library that generates all holidays in Poland for a given year</Description>
    <PackageReleaseNotes>Since 2025 there is new holiday in Poland: Christmas Eve. Drop .NET Standard 1.0 and target to .Net Standard 2.0</PackageReleaseNotes>
    <PackageLicenseExpression />
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Version>2.0.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Szyb.Computus" Version="1.1.0" />
  </ItemGroup>

</Project>
